<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <SearchView
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="ID:"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/edt_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="#76F46E"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Name:"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="#76F46E"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Date:"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/edt_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="#76F46E"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Time:"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/edt_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="#76F46E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Writing:"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkboxstatus"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btn_add"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Add"
            android:textColor="#000000"
            android:backgroundTint="#42A4F3"/>
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Edit"
            android:textColor="#000000"
            android:backgroundTint="#42A4F3"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Delte"
            android:textColor="#000000"
            android:backgroundTint="#42A4F3"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_show"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Show"
            android:textColor="#000000"
            android:backgroundTint="#42A4F3"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btn_count"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Sum "
            android:textColor="#000000"
            android:backgroundTint="#42A4F3"/>
        <TextView
            android:text=""
            android:id="@+id/tv_sum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#AEEF62"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="_______ List of exams_______"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#AEF45D"/>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#51D5E6"
        android:layout_marginTop="10dp"
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>